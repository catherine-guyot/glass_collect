        <div class="col-md-6 d-flex flex-column justify-content-center>
         <div class= "image-container">
          <img src="https://res.cloudinary.com/dpng0dizn/image/upload/v1688064010/photo-1687428455_ws8iuf.jpg" alt="Image bouteille" class="img-fluid rounded">
         </div>
        </div>
      </div>

      <div class="col-md-6 mt-3">
      <%= link_to "Découvrez les dépots et réservez!", deposits_path, class: "btn btn-outline-success btn-lg " %>
      </div>

      <div class="col-md-6 mt-3">

        <%= link_to "je dépose", dashboard_path, class: "btn btn-outline-success btn-lg  " %>
      </div>

      <div class="col-md-6 mt-3">
        <%= link_to "j'utilise ma cagnotte", "#", class: "btn btn-outline-success btn-lg  " %>
      </div>

      <div class = "mt-3 ">
      <strong><%= link_to "Pourquoi ré-utiliser le verre", about_path , class: "text-success"%></strong>
      </div>
    </div>



  </div>



