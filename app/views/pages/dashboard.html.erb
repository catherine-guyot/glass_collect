<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="text-success"><strong>Votre espace re-user</strong></h3>
      <div class="booking-container">
        <h4>Vos r√©servations</h4>

        <% @bookings.each_with_index do |booking, index| %>
          <% if index < 4 %>
            <div class="card mb-3 bg-white">
              <div class="card-body d-flex align-items-center">
                <%= image_tag("bootle_icone.png", class: "marker") %>
                <div class="ms-2">
                  <p class="mb-0">La re-use box: <%= booking.deposit.address %></p>
                  <p class="mb-0">Attend <strong><%= booking.number_of_bottles %></strong> bouteilles avant le <%= booking.end_date %></p>
                </div>
              </div>
              <div class="card-footer bg-transparent">
                <%= button_to('Supprimer', deposit_booking_path(booking.deposit, booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm') %>
              </div>
            </div>
          <% else %>
            <% if index == 4 %>
              <div class="card mb-3 bg-white">
                <div class="card-body text-center">
                  <button class="btn btn-primary btn-sm" type="button" data-bs-toggle="collapse" data-bs-target="#bookingDropdown" aria-expanded="false" aria-controls="bookingDropdown">
                    Voir plus de r√©servations üëáüèº
                  </button>
                </div>
              </div>
              <div class="collapse" id="bookingDropdown">
            <% end %>
            <div class="card mb-3 bg-white">
              <div class="card-body d-flex align-items-center">
                <%= image_tag("bootle_icone.png", class: "marker") %>
                <div class="ms-2">
                  <p class="mb-0">La re-use box: <%= booking.deposit.address %></p>
                  <p class="mb-0">Attend <strong><%= booking.number_of_bottles %></strong> bouteilles avant le <%= booking.end_date %></p>
                </div>
              </div>
              <div class="card-footer bg-transparent">
                <%= button_to('Supprimer', deposit_booking_path(booking.deposit, booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm') %>
              </div>
            </div>
            <% if index == @bookings.size - 1 %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <% if @bookings.empty? %>
          <p>Aucune r√©servation pour le moment.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
