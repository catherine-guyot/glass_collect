<div class="container">
  <h2 class="text-success"><strong>Bonjour <%= current_user.first_name %></strong></h2>
  <div class="booking-container">
    <h4>Voici vos réservations en cours</h4>

    <% @bookings.each do |booking| %>
      <% if booking.status == "pending" %>
        <div class="booking-card card mb-3 bg-white">
          <div class="row g-0">
            <div class="col-md-2 col-3">
              <div class="image-wrapper">
                <%= image_tag "bootle_icone.png", class: "marker", alt: "Booking Image" %>
              </div>
            </div>
            <div class="col-md-10 col-9">
              <div class="card-body">
                <p class="card-text">📍 Le dépôt: <%= booking.deposit.address %></p>
                <p class="card-text">🔜 Attend <%= booking.number_of_bottles %> bouteilles avant le <%= booking.end_date %></p>
                <p class="card-text">💰 Cela augmentera votre cagnotte de <%= booking.number_of_bottles * 0.5 %>€</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                  <%= link_to 'je dépose', update_booking_path(booking.id), data: {turbo_method: :patch}, class: 'btn btn-outline-success me-md-2 mb-2'%>
                  <%= link_to 'supprimer', delete_booking_path(booking.id), data: {turbo_method: :delete, turbo_confirm: "Vous confirmez?"}, class: 'btn btn-outline-primary mb-2'%>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% end %>

    <% end %>

  </div>

</div>
