
<div class="container">
  <div class="row">
    <div class="col-xs-4">

      <h3 class = "mb-2 d-flex justify-content-center"><%= @deposit.name %></h3>


      <%= simple_form_for([@deposit, @review]) do |f| %>
        <div class = "mb-3">
          <%= f.input :comment, label: "commentaire" %>
        </div>
        <div class ="mb-5">
          <%= f.input :rating, collection: (1..5).to_a, label: "Note ton expérience", input_html: {data: {controller: "star-rating"}}%>
        </div>
        <div class = "mb-5">
          <%= f.button :submit, value:"valider le commentaire", class:"btn-success btn-validation"%>
        </div>


        <% if @review.present? %>
          <% @reviews.each do |review| %>
          <% if review.deposit_id == @deposit.id%>
            <div>
            <% review.rating.times do %>
            <i class = "fas fa-star"></i>
            <% end %>
            <%= review.comment %>
            <%= button_to 'supprimer', deposit_review_path(review.deposit, review.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-success ms-2 mt-2%' %>
          <% end  %>
          <% end %>
            </div>
        <% else %>
            <p>Soyer le premier à mettre un commentaire !</p>
        <% end %>

      <% end %>



    </div>
  </div>
</div>
